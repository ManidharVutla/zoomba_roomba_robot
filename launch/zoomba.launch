<launch>

<arg
    name="Record"
    default = "false"
/>

 <include file="$(find turtlebot_gazebo)/launch/turtlebot_world.launch">
</include>

<node
pkg="zoomba_roomba_robot"
type="smart"
name="smart"
required ="true"

/>
<node
    pkg = "rosbag"
    name = "record"
    type = "record"
    args = "-a -x /camera/(.*) -O $(find zoomba_roomba_robot)/results/Walker.bag"
    if = "$(arg Record)"
    output = "screen"
/>

</launch>
